<div class="container">
  <div class="form-wrapper">
    <h2>Book a flat</h2>
    <%= simple_form_for [@room, @booking] do |f| %>
      <%= f.input :checkin, as: :string,
                               required: false,
                               input_html: { id: "range_start" } %>
      <%= f.input :checkout, as: :string,
                             required: false,
                             input_html: { id: "range_end" } %>
      <%= f.button :submit, "Book", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div id="booking-form-div"
     data-bookings="<%= @bookings_dates.to_json %>">
  </div>
</div>