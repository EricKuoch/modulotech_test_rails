<div class="container">
  <!-- IMAGES -->
  <div class="title-results">
    <h1>"<%= "#{@room.title.upcase}"%>"</h1> <br>
  </div>

  <!-- DETAILS -->
  <div class="info-form">
    <div class="info-show">
      <div class="details-show">
        <ul style="list-style-type:none; ">
          <li><i class="fas fa-paw"></i> Description: <%= @room.description %></li> <br>
          <li><i class="far fa-address-card"></i> Contact: <%= @room.user.email %></li><br>
          <li><i class="fas fa-globe-asia"></i> Location: <%= @room.address %></li><br>
          <li></li>
        </ul>
      </div>
      <div class="reviews">
        <h3><strong>Reviews :</strong></h3>
          <p>Price : <span id="price"> <%= @room.price %> </span> €/day</p>
      </div>
    </div>
    <div class="form-show">
      <h1> BOOK ME !</h1>
      
      <%= simple_form_for [@room, @booking] do |f| %>
        <%= f.input :checkin, as: :string,
                wrapper_html: { class: "mb-4" },
                label_html: { class: "form-label text-secondary fw-bold" },
                input_html: { id: "start_date", data: { controller: "flatpickr" } } %>
        <%= f.input :checkout, label:false, as: :string, required: false, input_html: {id: "end_date", class: "dnone", value:"toto"}%>
        <br>
        <h1><small>TOTAL:</small>
        <span id='totalprice'>0</span>€
        </h1>
        <br>
        <%= f.submit class: "btn btn-primary homebtn2" %>
      <% end %>
    </div>
  </div>
</div>

<div id="booking-form-div"
    data-bookings="<%= @bookings_dates.to_json %>">
</div>
<div id="room-price"
    data-price="<%= @room.price %>">
</div>

